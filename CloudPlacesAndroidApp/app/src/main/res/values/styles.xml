<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff6d35</item>
        <item name="colorPrimaryDark">#ff6d35</item>
        <item name="colorAccent">#ff5500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonCloudPlaces">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#ff5500</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="NavHeaderCloudPlaces">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#ff5500</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="ToolbarCloudPlaces">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#ff6d35</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextAppearance">@color/white</item>
    </style>

    <style name="WhiteTextCloudPlaces">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCloudPlaces">
        <item name="android:textColor">#262626</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Title1CloudPlaces">
        <item name="android:textColor">#131339</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Title2CloudPlaces">
        <item name="android:textColor">#131339</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
