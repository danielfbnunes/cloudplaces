<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/accommodationImage"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/accommodationName"
            style="@style/Title1CloudPlaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accommodationImage" />

        <TextView
            android:id="@+id/accommodationLocation"
            style="@style/Title2CloudPlaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="LOCATION"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accommodationName" />

        <ImageView
            android:id="@+id/lotImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <TextView
            android:id="@+id/accommodationLot"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="T"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/lotImage"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <ImageView
            android:id="@+id/bedImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/bed"
            app:layout_constraintStart_toEndOf="@+id/accommodationLot"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <TextView
            android:id="@+id/accommodationBeds"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="T"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/bedImage"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <ImageView
            android:id="@+id/bathImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/bath"
            app:layout_constraintStart_toEndOf="@+id/accommodationBeds"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <TextView
            android:id="@+id/accommodationBath"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="T"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/bathImage"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <ImageView
            android:id="@+id/garageImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/garage"
            app:layout_constraintStart_toEndOf="@+id/accommodationBath"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <TextView
            android:id="@+id/accommodationGarage"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="T"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/garageImage"
            app:layout_constraintTop_toBottomOf="@+id/accommodationLocation" />

        <TextView
            android:id="@+id/accommodationDescription"
            style="@style/TextCloudPlaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="DESCRIPTION"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lotImage" />

        <Button
            android:id="@+id/contactTheOwner"
            style="@style/ButtonCloudPlaces"
            android:layout_width="194dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="Contact the owner"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accommodationDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>